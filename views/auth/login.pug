extends ../layout/sket

block content
  h1 Login
  if errors
    each err in errors
      .alert.alert-danger= err

  form(method="POST")
    .form-group
      label(for="name") Email
      input#email.form-control(name="email", type="text", value=info ? info.email : "")

    .form-group
      label(for="password") Password
      input#password.form-control(name="password", type="text", value=info ? info.password : "")

    button.btn.btn-primary Login

